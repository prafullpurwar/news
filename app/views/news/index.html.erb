<p id="notice"><%= notice %></p>

<h1>Listing News</h1>

<table>
  <thead>
    <tr>
      <th>Headline</th>
      <th>Body</th>
      <th>Author</th>
      <th>Newspaper</th>
      <th>Editor</th>
      <th>ExpertiseArea</th>
      <th>ExpertiseArea1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.headline %></td>
        <td><%= news.body %></td>
        <td><%= news.author %></td>
        <td><%= news.newspaper %></td>
        <td><%= news.editor %></td>
        <td><%= news.expertise_area %></td>
        <td><%= news.expertise_area1 %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

